{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"] // 将 '@' 指向 'src' 目录
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
